user 'Shopper' as u;
agent 'Cart Service' as cs;
agent 'Order Service' as os;
store 'Cart Data' as cd;
store 'Inventory' as i;

cs --> cd;
cs <-- cd;

'Add item happy' {
    u -('add item')->cs

    cs <-'item in cart'-cd
    cs <- 'item data' - i

    cs -('place order')-\os
    
    cs - 'item' -> cd
    u --('added')--< cs
};

'Add Item Failure' {
    u -('add item')->cs

    cs <-'item in cart'-cd
    cs <- 'item data' - i

    u --('no item')--< cs
};